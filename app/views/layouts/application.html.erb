<!DOCTYPE html>
<html>
<head>
  <title>R</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "r.nmajor.com", root_path, class: "brand" %>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Top", root_path %></li>
          <li><%= link_to "Favorites", root_path %></li>
          <li><%= link_to "Recommended", root_path %></li>
          <li><%= link_to "Genre", root_path %></li>
        </ul>
        <div id="user_nav" class="pull-right">
          <% if user_signed_in? %>
            Signed in as <%= link_to current_user.username, user_show_path(current_user) %>. Not you?
            <%= link_to "Logout", destroy_user_session_path %>
          <% else %>
            <%= link_to "Login", new_user_session_path %> or <%= link_to "Register", new_user_registration_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      <a class="close" data-dismiss="alert">x</a>
      <%= msg %>
    </div>
  <% end %>
  <%= yield %>
  
</div>
</body>
</html>
